{
  "name": "@lab.ozenc.dev/server",
  "version": "1.0.0",
  "description": "Backend routing server for lab.ozenc.dev",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:debug": "tsx watch --inspect --clear-screen=false src/index.ts",
    "dev:nodemon": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rimraf dist",
    "test": "echo \"No tests yet\" && exit 0",
    "lint": "echo \"No linting configured yet\" && exit 0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "rimraf": "^5.0.5",
    "nodemon": "^3.0.2"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*",
      "../manifest.json",
      "../apps/*/package.json"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "node_modules/**/*",
      "dist/**/*",
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "delay": 1000,
    "env": {
      "NODE_ENV": "development"
    }
  },
  "keywords": [
    "express",
    "server",
    "typescript",
    "monorepo",
    "hot-reload",
    "development"
  ],
  "author": "lab.ozenc.dev",
  "license": "MIT"
} 
