#!/bin/sh

#
# Pre-commit hook for lab.ozenc.dev
#
# This hook validates the manifest.json file before allowing commits
# to ensure the project registry remains consistent and valid.
#

echo "🔍 Running pre-commit checks..."

# Check if manifest.json exists
if [ ! -f "manifest.json" ]; then
  echo "❌ Error: manifest.json not found in repository root"
  echo "💡 Please ensure manifest.json exists before committing"
  exit 1
fi

# Run manifest validation
echo "📋 Validating manifest.json..."

if npm run validate --silent; then
  echo "✅ Manifest validation passed"
else
  echo ""
  echo "❌ Manifest validation failed!"
  echo "💡 Please fix the manifest issues above before committing"
  echo "💡 Run 'npm run validate' to see detailed error information"
  exit 1
fi

# Check if shared package builds successfully (if modified)
if git diff --cached --name-only | grep -q "^shared/"; then
  echo "🔧 Shared package modified, checking build..."
  
  if cd shared && npm run build --silent && cd ..; then
    echo "✅ Shared package builds successfully"
  else
    echo "❌ Shared package build failed!"
    echo "💡 Please fix build errors before committing"
    exit 1
  fi
fi

echo "🎉 All pre-commit checks passed!"
exit 0 
