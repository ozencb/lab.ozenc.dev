{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
  },
  "include": ["types/**/*", "utils/**/*", "constants/**/*", "*.ts"],
  "exclude": ["dist", "node_modules"],
}
